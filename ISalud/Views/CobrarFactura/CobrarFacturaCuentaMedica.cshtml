@{
    ViewBag.Title = "CobrarFacturaCuentaMedica";
    Layout = "~/Views/Shared/_LayoutSitio.cshtml";
}

<style>
    input[type=checkbox] {
        /* Double-sized Checkboxes */
        -ms-transform: scale(2); /* IE */
        -moz-transform: scale(2); /* FF */
        -webkit-transform: scale(2); /* Safari and Chrome */
        -o-transform: scale(2); /* Opera */
        padding: 10px;
    }
</style>

<main class="center text-center">
    <div id="content-filtro" class="animate__animated animate__fadeInRight">
        <h1>Cobrar factura con Cuenta Médica</h1>

        <div class="informacion">
            <div>
                <span>Nº de factura: <b>55</b></span>
            </div>
            <div>
                <span>Monto factura: <b>$55.392.495</b></span>
            </div>
        </div>


        <!-- Filtros antes de mostrar información-->
        <!-- Ingreso de archivo antes de mostrar información-->

        <div class="titulo">
            <h3>Datos de la cuenta médica</h3>
            <!--<div class="tooltip">
            <a href="#" class="enlace"><img src="/img/i-question.svg"></a>
            <p>Por cada factura se puede incorporar una cuenta médica</p>
        </div>-->
        </div>

        <form class="formCuentaMedica">
            <div>
                <input type="text" placeholder="Nº de cuenta médica">
            </div>
            <div>
                <input type="text" placeholder="Rut del paciente">
            </div>
            <div>
                <select style="width: 100%;">
                    <option>Tipo de evento</option>
                </select>
            </div>
            <div class="calendarInput">
                <input type="text" placeholder="Fecha incio hospitalización" class="datepicker">
                <img src="/img/i-calendar.svg">
            </div>
            <div class="calendarInput">
                <input type="text" placeholder="Fecha fin hospitalización" class="datepicker">
                <img src="/img/i-calendar.svg">
            </div>
            <div>
                <input type="text" placeholder="Valor total de la cuenta">
            </div>
        </form>

        <!-- Documentación -->
        <div class="documentacion">
            <h3>Documentación</h3>
            <div class="buscador">
                <select name="select-documentacion" id="select-documentacion" style="width: 100%;">
                    <option value="">Seleccione un documento</option>
                    <option value="1">documento 1</option>
                </select>
            </div>
            <div class="inputFile" id="subir-archivo" style="display: none;">
                <input type="file" name="file-3[]" id="file-3" class="inputfile inputfile-3" data-multiple-caption="{count} files selected" multiple="" style="display: none;">
                <label for="file-3"><span>Click aquí para subir archivo</span></label>
                <img src="/img/i-upload.svg" alt="icono subir archivo">
            </div>
        </div>

        <div class="documentosAdjuntos" style="display: none;">
            <table id="tablaDocumentos" class="display">
                <thead>
                    <tr>
                        <th style="text-align:center">Nombre Documento</th>
                        <th style="text-align:center">Tipo de Documento</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="archivos-subidos">
                </tbody>

            </table>
        </div>

        <a class="btn-primary" id="btn-continuar2" style="display: none;">Continuar</a>
    </div>

    <!-- Información filtrada -->

    <main class="center-main text-center" id="contenido-filtrado" style="display: none;">
        <h1>Cobrar factura con Cuenta Médica</h1>
        @*<div class="buscador filtrosFacturaBono">
            <form action="#">
                <div class="checkBox">
                    <label class="radio-button">
                        <input id="rbTodosBonos" type="radio" name="radio">
                        <span class="label-visible">
                            <span class="fake-radiobutton"></span>
                        </span>
                        Todos los bonos
                    </label>
                </div>
                <div>
                    <input id="txtRutBeneficiarioFiltro" type="text" placeholder="Rut beneficiario">
                </div>
                <div>
                    <input id="txtNroCuentaFiltro" type="text" class="FormatNumber" placeholder="Nº de cuenta médica">
                </div>
                <button id="btn-filtro" type="button"><img src="~/img/i-buscar.svg"></button>
            </form>
        </div>*@
        <!-- Contenedor tabla y resumen -->
        <div class="contenedorTablaResumen">

            <table id="table-list-archivos" class="cobrarBonoTabla display">
                <thead id="table-list-head-bonos">
                </thead>
                <tbody id="table-list-body-bonos">
                </tbody>
            </table>

            <div class="resumen">
                <div class="info">
                    <h3>Resumen</h3>
                    <div><span>Nº de factura:</span> <b><label id="lblNroFactura"></label></b></div>
                    <div><span>Valor factura:</span> <b><label id="lblValorFactura"></label></b></div>
                    <div><span>Sumatoria bonos <br> seleccionados:</span> <b style="top: 20px"><label id="lblTotalSumaBonos">0</label></b></div>
                </div>
                <button id="btnModalCobro" class="btn-primary">Cobrar bonos seleccionados</button>
            </div>

        </div>
    </main>

    <!-- Popup Confirmación datos-->
    <div class="overlay" style="display: none;">
        <div class="contenedor-popup">
            <h3>Confirmación</h3>

            <div class="datosFactura">
                <div>
                    <span>Nº de factura</span>
                    <b><label id="lblNroFacturaModal">55</label></b>
                </div>
                <div>
                    <span>Se cobra con</span>
                    <b><label id="lblTipoCobroModal">Bono</label></b>
                </div>
                <div>
                    <span>Fecha</span>
                    <b><label id="lblFechaCobroModal">21-01-2020</label></b>
                </div>
                <div>
                    <span>Monto</span>
                    <b><label id="lblMontoCobroModal">$4.529.434</label></b>
                </div>
            </div>

            <button id="btnCobrarFacturaModal" class="btn-primary">Cobrar factura</button>
            <a id="btnCancelarModal" href="javascript:void(0);" class="cancelarEnlace">Cancelar</a>
        </div>
    </div>

</main>

<script src="~/js/Sitio/CobrarNuevaFactura.js"></script>