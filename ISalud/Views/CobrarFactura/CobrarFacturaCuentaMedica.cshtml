            <h3>Datos de la cuenta médica</h3>
        </div>

        <div class="form-group">
            <form id="FormCuentaMedica" method="post" class="formCuentaMedica">

                <div class="row">
                    <div class="col-md-12">
                        <input id="txtNroCuentaMedica" name="txtNroCuentaMedica" type="text" placeholder="Nº de cuenta médica" 
                               class="form-control FormatNumber" data-precision="10">
                        <br />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6" style="margin-top: 10px;">
                        <input id="txtRutPaciente" name="txtRutPaciente" type="text" placeholder="Rut del paciente" 
                               class="form-control format-rut" maxlength="12">
                    </div>
                    <div class="col-md-6" style="margin-top: 10px;">
                        <div>
                            <input id="txtValorCuenta" name="txtValorCuenta" type="text" placeholder="Valor total de la cuenta" 
                                   class="form-control FormatAmount" data-precision="10,0">
                        </div>
                    </div>
                </div>
                <div class="row" style="height: 200px;">
                    <div class="col-md-6" style="margin-top: 10px;">
                        <div class="calendarInput">
                            <input id="txtFechaInicio" name="txtFechaInicio" type="text" placeholder="Fecha incio hospitalización" class="input-locked">
                            <img src="~/img/i-calendar.svg">
                        </div>
                    </div>
                    <div class="col-md-6" style="margin-top: 10px;">
                        <div class="calendarInput">
                            <input id="txtFechaTermino" name="txtFechaTermino" type="text" placeholder="Fecha fin hospitalización" class="input-locked">
                            <img src="~/img/i-calendar.svg">
                        </div>
                    </div>
                </div>

                <!-- Documentación -->
                <div class="documentacion">
                    <h3>Documentación</h3>
                    <div class="buscador">
                        <select name="select-documentacion" id="select-documentacion" style="width: 100%;">
                            <option value="0">Seleccione un documento</option>
                            <option value="1">Cuenta médica</option>
                            <option value="2">Epicrisis</option>
                            <option value="3">Protocolo operatorio</option>
                            <option value="5">Declaración de accidentes</option>
                            <option value="6">Otros adjuntos</option>
                        </select>
                    </div>
                    <div class="inputFile" id="subir-archivo" style="display: none;">
                        <input type="file" name="file-3[]" id="file-3" class="inputfile inputfile-3" data-multiple-caption="{count} files selected" multiple="" style="display: none;">
                        <label for="file-3"><span id="lblInputFile">Click aquí para subir archivo</span></label>
                        <img src="~/img/i-upload.svg" alt="icono subir archivo">
                    </div>
                </div>

                <div class="documentosAdjuntos" style="display: none;">

                    <table id="table-list-files" class="display">
                        <thead id="table-list-head-files">
                        </thead>
                        <tbody id="table-list-body-files">
                        </tbody>
                    </table>

                </div>

                <a class="btn-primary" id="btn-continuar" style="display: none;">Continuar</a>

